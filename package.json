{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Professional Portfolio Website",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"live-server\"",
    "watch:css": "tailwindcss -i ./input.css -o ./dist/output.css --watch",
    "build:css": "tailwindcss -i ./input.css -o ./dist/output.css --minify",
    "build": "npm run build:css"
  },
  "keywords": ["portfolio", "developer", "web"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  }
}
